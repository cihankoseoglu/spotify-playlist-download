extends layout

block content
  h1= title
  p Welcome to #{title}

  h2 Your playlists
  ul
    each playlist in playlists
      li
        p
          if playlist.images[0]
            img(src=playlist.images[0].url width="60" height="60")
          | #{playlist.name}
        ul
          each song in playlist.songs
            li= song.track.name

